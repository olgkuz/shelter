/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    // Строгий режим + дополнительные проверки
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    // Рекомендуется включить для разных ОС
    "forceConsistentCasingInFileNames": true,

    // Строгие режимы, которые ты уже использовал
    "strictPropertyInitialization": false,
    "strictNullChecks": false,

    // Angular декораторы
    "experimentalDecorators": true,

    // Для использования tslib (обязательно установить пакет `tslib`)
    "importHelpers": true,

    // Современный таргет и модуль
    "target": "ES2022",
    "module": "ES2022",

    // Важно для Angular 17+ и TypeScript 5.x
    "moduleResolution": "bundler",

    // Удобная работа с ESM/CJS
    "esModuleInterop": true,

    // Рекомендуется для Angular (чтобы не ломались поля классов)
    "useDefineForClassFields": false
  },

  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },

  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
